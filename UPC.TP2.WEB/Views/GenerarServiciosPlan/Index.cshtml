@{
    ViewBag.Title = "Index";
}

<table class="table">
    <tr>
        <td>
            <div class="header">
                <h4 class="title">Informe Servicios por Planes de Salud</h4>
            </div>
        </td>
    </tr>
    <tr>
        <td>
            <div class="col-md-6">
                <div class="form-group">
                    <label>Fecha desde:</label>
                    <input name="fecha_inicio" type="text" class="form-control datepicker" placeholder="Fecha inicio" value="">
                </div>
            </div>
        </td>
        <td>
            <div class="col-md-6">
                <div class="form-group">
                    <label>Fecha hasta:</label>
                    <input name="fecha_fin" type="text" class="form-control datepicker" placeholder="Fecha fin" value="">
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.ActionLink("Generar Informe", "ChartServicios", "GenerarServiciosPlan")
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
        </td>
    </tr>
</table>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}