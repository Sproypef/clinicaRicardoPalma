@model UPC.TP2.WEB.Models.T_PLAN_DE_SALUD

@{
    ViewBag.Title = "Create";
}

<h2>Crear Plan de Salud</h2>

@using (Html.BeginForm(null, null, FormMethod.Post,
                                      new { enctype = "multipart/form-data", autocomplete = "off" }))
{
    @Html.ValidationSummary(true)

    <fieldset>

        <table>
            <tr>
                <td>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.nombre_plan)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.nombre_plan)
                        @Html.ValidationMessageFor(model => model.nombre_plan)
                    </div>
                </td>
                <td>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.descripcion)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.descripcion)
                        @Html.ValidationMessageFor(model => model.descripcion)
                    </div>
                </td>
                <td>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.objetivo)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.objetivo)
                        @Html.ValidationMessageFor(model => model.objetivo)
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.fecha_inicio)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.fecha_inicio)
                        @Html.ValidationMessageFor(model => model.fecha_inicio)
                    </div>
                </td>
                <td>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.fecha_fin)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.fecha_fin)
                        @Html.ValidationMessageFor(model => model.fecha_fin)
                    </div>
                </td>
            </tr>
            <tr></tr>
            <tr></tr>
            <tr>
                <td>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.id_investigacion_comercial, "T_INVESTIGACION_COMERCIAL")
                    </div>
                    <div class="editor-field">
                        @Html.DropDownList("id_investigacion_comercial", String.Empty)
                        @Html.ValidationMessageFor(model => model.id_investigacion_comercial)
                    </div>
                </td>
                <td>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.id_estrategia_comercial, "T_ESTRATEGIA_COMERCIAL")
                    </div>
                    <div class="editor-field">
                        @Html.DropDownList("id_estrategia_comercial", String.Empty)
                        @Html.ValidationMessageFor(model => model.id_estrategia_comercial)
                    </div>
                </td>
                <td>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.id_base_financiera, "T_BASE_FINANCIERA")
                    </div>
                    <div class="editor-field">
                        @Html.DropDownList("id_base_financiera", String.Empty)
                        @Html.ValidationMessageFor(model => model.id_base_financiera)
                    </div>
                </td>
                <td>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.id_base_legal, "T_BASE_LEGAL")
                    </div>
                    <div class="editor-field">
                        @Html.DropDownList("id_base_legal", String.Empty)
                        @Html.ValidationMessageFor(model => model.id_base_legal)
                    </div>
                </td>
            </tr>
        </table>

        <div class="editor-label">
            @Html.LabelFor(model => model.id_servicio)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.id_servicio)
            @Html.ValidationMessageFor(model => model.id_servicio)
        </div>

        <p>
            <input type="submit" value="Create" class="btn button" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Regresar", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
